{
  "manifest_version": 3,
  "name": "Google Meet Transcriber",
  "version": "0.1.0",
  "description": "Capture and transcribe audio from Google Meet calls in real-time",
  "permissions": [
    "tabCapture",
    "storage",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "https://meet.google.com/*"
  ],
  "background": {
    "service_worker": "chrome/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://meet.google.com/*"],
      "js": ["chrome/content.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_title": "Google Meet Transcriber",
    "default_popup": "chrome/popup.html"
  },
  "options_page": "chrome/options.html",
  "icons": {
    "16": "icons/icon-16.svg",
    "48": "icons/icon-48.svg",
    "128": "icons/icon-128.svg"
  },
  "web_accessible_resources": [
    {
      "resources": ["chrome/offscreen.html"],
      "matches": ["https://meet.google.com/*"]
    }
  ]
}
