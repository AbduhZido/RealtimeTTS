{
  "manifest_version": 2,
  "name": "Google Meet Transcriber",
  "version": "0.1.0",
  "description": "Capture and transcribe audio from Google Meet calls in real-time",
  "permissions": [
    "tabs",
    "storage",
    "https://meet.google.com/*"
  ],
  "background": {
    "scripts": ["firefox/background.js"]
  },
  "content_scripts": [
    {
      "matches": ["https://meet.google.com/*"],
      "js": ["firefox/content.js"],
      "run_at": "document_start"
    }
  ],
  "browser_action": {
    "default_title": "Google Meet Transcriber",
    "default_popup": "firefox/popup.html"
  },
  "options_ui": {
    "page": "firefox/options.html",
    "browser_style": true
  },
  "icons": {
    "16": "icons/icon-16.svg",
    "48": "icons/icon-48.svg",
    "128": "icons/icon-128.svg"
  }
}
