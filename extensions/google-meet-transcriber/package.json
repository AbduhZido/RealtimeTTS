{
  "name": "google-meet-transcriber",
  "version": "0.1.0",
  "description": "Chrome/Firefox extension for capturing and transcribing Google Meet audio",
  "type": "module",
  "scripts": {
    "dev": "vite --host",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint src --ext .ts,.tsx --fix",
    "test": "vitest --run",
    "pack": "npm run build && node scripts/pack.js",
    "pack:chrome": "npm run build && node scripts/pack.js chrome",
    "pack:firefox": "npm run build && node scripts/pack.js firefox"
  },
  "dependencies": {
    "webextension-polyfill": "^0.10.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "eslint": "^8.54.0",
    "typescript": "^5.3.2",
    "vite": "^5.0.7",
    "vitest": "^1.0.4",
    "archiver": "^6.0.0"
  }
}
