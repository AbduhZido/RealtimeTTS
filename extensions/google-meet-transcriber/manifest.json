{
  "manifest_version": 3,
  "name": "Google Meet Transcriber",
  "version": "0.1.0",
  "description": "Capture and transcribe Google Meet audio in real-time",
  "permissions": [
    "tabCapture",
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://meet.google.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://meet.google.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_title": "Google Meet Transcriber"
  },
  "options_page": "options.html"
}
